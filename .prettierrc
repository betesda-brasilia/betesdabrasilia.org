{
	"printWidth": 80,
	"tabWidth": 4,
	"singleQuote": true,
	"bracketSpacing": false,
	"quoteProps": "consistent",
	"trailingComma": "none",
	"arrowParens": "avoid",
	"useTabs": true,
	"semi": true,
	"overrides": [
		{
			"files": ["./src/*.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
